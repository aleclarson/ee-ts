{
  "name": "ee-ts",
  "version": "0.1.5",
  "main": "lib/ee.js",
  "license": "MIT",
  "repository": "aleclarson/ee-ts",
  "description": "Type-safe event emitters",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p . -d",
    "test": "tsc -p . -d --inlineSourceMap && jest -i --coverage"
  },
  "engines": {
    "node": ">=6",
    "typescript": ">=3"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/jest": "^23.3.9",
    "coveralls": "^3.0.2",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.12.1",
    "sucrase": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-mango": "^0.1.2",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
