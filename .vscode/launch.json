  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run tests in current file",
      "type": "node",
      "request": "launch",
      "args": ["--runInBand", "--", "${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "name": "Run tests",
      "type": "node",
